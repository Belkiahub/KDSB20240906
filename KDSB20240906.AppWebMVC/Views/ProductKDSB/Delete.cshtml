@model KDSB.DTOs.ProducDTOs.GetIdResultProductDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que deseas eliminar el producto?</h3>
<div>
    <h4>Producto</h4>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="NombreKDSB" class="control-label"></label>
                <input asp-for="NombreKDSB" disabled class="form-control" />
                <span asp-validation-for="NombreKDSB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="DescripcionKDSB" class="control-label"></label>
                <input asp-for="DescripcionKDSB" disabled class="form-control" />
                <span asp-validation-for="DescripcionKDSB" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <textarea asp-for="Precio" disabled class="form-control"></textarea>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <form asp-action="Delete">
        <div class="row-cols-6">
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>
